local M = { "nvimdev/indentmini.nvim" }

M.event = "VeryLazy"

M.config = function()
  require("indentmini").setup({
    minlevel = 2
  })

  vim.api.nvim_set_hl(0, "IndentLine", { fg = "#292929", nocombine = true })
  vim.api.nvim_set_hl(0, "IndentLineCurrent", { fg = "#292929", nocombine = true })
end

return M
